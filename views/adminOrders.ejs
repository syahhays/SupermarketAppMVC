<!DOCTYPE html>
<html>
<head>
  <title>All Orders (Admin)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-4">
  <h1>All Orders</h1>

  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Order ID</th>
        <th>User</th>
        <th>Total</th>
        <th>Order Date</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% orders.forEach(o => { %>
        <tr>
          <td><%= o.id %></td>
          <td><%= o.username || o.userId %></td>
          <td>$<%= Number(o.totalAmount || 0).toFixed(2) %></td>
          <td><%= o.orderDate %></td>
          <td>
            <a class="btn btn-sm btn-primary" href="/admin/orders/<%= o.id %>">View</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

</body>
</html>