<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* Product Image in Cart */
    .cart-img {
      width: 70px;
      height: 70px;
      object-fit: contain;
      background: #f8f9fa;
      padding: 6px;
      border-radius: 8px;
    }

    /* Quantity Buttons */
    .qty-btn {
      width: 32px;
      height: 32px;
      border-radius: 6px;
      font-weight: bold;
      font-size: 18px;
      padding: 0;
      line-height: 1;
    }

    .qty-input-box {
      width: 60px;
      text-align: center;
    }

    /* Summary Card Styling */
    .summary-card {
      border-radius: 12px;
      box-shadow: 0 4px 14px rgba(0,0,0,0.08);
    }

    .summary-header {
      background: #212529;
      color: white;
      border-radius: 12px 12px 0 0;
      padding: 12px 16px;
      font-size: 1.2rem;
    }

    /* Continue Shopping Button */
    .continue-btn {
      font-weight: 500;
      margin-bottom: 20px;
    }

  </style>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="m-0">Your Shopping Cart</h2>

      <a href="/shopping" class="btn btn-outline-primary continue-btn">
        ← Continue Shopping
      </a>
    </div>

    <% const hasItems = cart && cart.length > 0; %>

    <div class="row gy-4">

      <!-- CART ITEMS -->
      <div class="col-lg-8">

        <% if (hasItems) { %>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead class="table-dark">
                <tr>
                  <th>Item</th>
                  <th>Product</th>
                  <th>Price</th>
                  <th style="width:180px;">Quantity</th>
                  <th>Total</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% cart.forEach(item => { 
                     const lineTotal = item.price * item.quantity;
                %>
                  <tr>

                    <!-- Image -->
                    <td>
                      <% if (item.image) { %>
                        <img src="/images/<%= item.image %>" class="cart-img">
                      <% } else { %>
                        <span class="text-muted">No Image</span>
                      <% } %>
                    </td>

                    <!-- Product Name -->
                    <td>
                      <strong><%= item.productName %></strong>
                    </td>

                    <!-- Price -->
                    <td>$<%= item.price.toFixed(2) %></td>

                    <!-- Quantity Controls -->
                    <td>
                      <div class="d-flex align-items-center gap-2">

                        <!-- Decrease (–) -->
                        <form action="/cart/update/<%= item.productId %>" method="POST">
                          <input type="hidden" name="quantity" value="<%= item.quantity - 1 %>">
                          <button class="btn btn-outline-secondary qty-btn" <%= item.quantity <= 1 ? "disabled" : "" %>>-</button>
                        </form>

                        <!-- Quantity Number Input -->
                        <form action="/cart/update/<%= item.productId %>" method="POST">
                          <input type="number" 
                                 name="quantity" 
                                 class="form-control qty-input-box"
                                 value="<%= item.quantity %>" 
                                 min="1">
                        </form>

                        <!-- Increase (+) -->
                        <form action="/cart/update/<%= item.productId %>" method="POST">
                          <input type="hidden" name="quantity" value="<%= item.quantity + 1 %>">
                          <button class="btn btn-outline-secondary qty-btn">+</button>
                        </form>
                      </div>
                    </td>

                    <!-- Line Total -->
                    <td><strong>$<%= lineTotal.toFixed(2) %></strong></td>

                    <!-- Remove Button -->
                    <td>
                      <a href="/cart/remove/<%= item.productId %>" 
                         class="btn btn-sm btn-danger">
                        Remove
                      </a>
                    </td>

                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

        <% } else { %>

          <!-- EMPTY CART -->
          <div class="alert alert-info text-center py-4">
            Your cart is empty!  
            <br><br>
            <a href="/shopping" class="btn btn-primary">Browse Groceria Shop</a>
          </div>

        <% } %>

      </div>

      <!-- SUMMARY -->
      <div class="col-lg-4">
        <div class="card summary-card">

          <div class="summary-header">
            Cart Summary
          </div>

          <div class="card-body">
            <% if (hasItems) { %>

              <p>You have <strong><%= cart.length %></strong> item<%= cart.length > 1 ? 's' : '' %> in your cart.</p>

              <hr>

              <h5>Grand Total:</h5>
              <h2 class="fw-bold">$<%= grandTotal.toFixed(2) %></h2>

              <a href="/checkout" class="btn btn-success w-100 mt-3 py-2">
                Proceed to Checkout
              </a>

              <a href="/cart/clear" class="btn btn-warning w-100 mt-2 py-2">
                Clear Cart
              </a>

            <% } else { %>

              <p class="text-muted">No items in cart.</p>
              <a href="/shopping" class="btn btn-primary w-100">Go to Shop</a>

            <% } %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>