<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Groceria</title>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container mt-4">

    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Products from Groceria Database</h2></div>
    <br>

    <table class="table table-hover small text-center align-middle">
      <thead class="table-dark">
        <tr>
          <th>Product Name</th>
          <th>Product Image</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Category</th>
          <th>Edit</th>
          <th>Status / Actions</th>
        </tr>
      </thead>

      <tbody>
        <% products.forEach(product => {
            const unavailable = (!product.isActive || product.quantity <= 0);
        %>
          <tr class="<%= unavailable ? 'table-secondary opacity-50' : '' %>">

            <!-- PRODUCT NAME -->
            <td><%= product.productName %></td>

            <!-- PRODUCT IMAGE (FIXED) -->
            <td>
              <% if (product.image) { %>
                <img src="/images/<%= product.image %>"
                     style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;">
              <% } else { %>
                <span class="text-muted">No Image</span>
              <% } %>
            </td>

            <!-- QUANTITY -->
            <td><%= product.quantity %></td>

            <!-- PRICE -->
            <td>$<%= product.price %></td>

            <!-- CATEGORY -->
            <td><%= product.category %></td>

            <!-- EDIT BUTTON -->
            <td>
              <a href="/updateProduct/<%= product.id %>"
                class="btn btn-sm btn-outline-primary"
                title="Edit Product">
                ‚úèÔ∏è
              </a>
            </td>

            <!-- STATUS & ACTIONS -->
            <td>
              <% if (unavailable) { %>
                <span class="badge bg-secondary me-2">Unavailable</span>
                <a href="/product/<%= product.id %>/enable"
                  class="btn btn-sm btn-outline-success"
                  title="Mark as Available">
                  ‚úî
                </a>

              <% } else { %>
                <span class="badge bg-success me-2">Active</span>
                <a href="/product/<%= product.id %>/disable"
                  class="btn btn-sm btn-outline-warning"
                  title="Mark as Unavailable">
                  üö´
                </a>
              <% } %>
            </td>

          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>

</body>
</html>