<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Groceria</title>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container mt-4">

    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Products from Groceria Database</h2></div>
    <br>

    <table class="table table-hover small text-center align-middle">
      <thead class="table-dark">
        <tr>
          <th>Product Name</th>
          <th>Product Image</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Category</th> <!-- NEW -->
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>

      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><a href="/product/<%= product.id %>"><%= product.productName %></a></td>
            <td><img src="/images/<%= product.image %>" width="60"></td>
            <td><%= product.quantity %></td>
            <td>$<%= product.price.toFixed(2) %></td>

            <!-- CATEGORY BADGE -->
            <td>
              <span class="badge bg-primary">
                <%= product.category %>
              </span>
            </td>

            <td><a href="/updateProduct/<%= product.id %>">Edit</a></td>
            <td>
              <a href="/deleteProduct/<%= product.id %>" onclick="return confirm('Delete this product?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>

</body>
</html>