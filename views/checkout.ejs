<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Confirm Purchase</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-preserve { min-height: 140px; }
    .order-summary .table td, .order-summary .table th { vertical-align: middle; }
    .pay-btn { width: 100%; }
    .billing-card small { color: #666; }
    .express-wrap { margin-top: 6px; }
    .express-title { font-size: 13px; color: #666; margin-bottom: 6px; text-transform: uppercase; letter-spacing: 0.3px; }
    .express-row { display: flex; flex-wrap: wrap; gap: 10px; }
    .express-btn {
      flex: 1 1 160px;
      min-width: 160px;
      border: 1px solid #e2e6ea;
      border-radius: 8px;
      padding: 10px 12px;
      background: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      cursor: pointer;
    }
    .express-btn.active {
      border-color: #0d6efd;
      box-shadow: 0 0 0 2px rgba(13,110,253,0.15);
    }
    .express-btn.paypal { background: #ffc439; color: #0a2540; }
    .express-btn.nets { background: #0d6efd; color: #fff; }
    .express-btn.stripe { background: #ffffff; color: #635bff; border: 1px solid #cfd3ff; }
    .express-note {
      font-size: 12px;
      color: #777;
      margin-top: 6px;
    }
    .pm-hidden { position: absolute; left: -9999px; }
  </style>
</head>
<body data-cart-has-items="<%= cart && cart.length ? '1' : '0' %>">
  <%- include('partials/navbar') %>

  <div class="container my-5">
    <div class="row g-4">

      <!-- LEFT: Billing / Items / Payment -->
      <div class="col-lg-8">

        <h2 class="mb-3">Confirm Purchase</h2>
        <p class="text-muted">Please review your order before confirming.</p>

        <div class="row g-3 mb-4">
          <div class="col-md-7">
            <div class="card billing-card p-3 card-preserve">
              <h6 class="mb-2">Bill to</h6>
              <div>
                <strong><%= user && user.username ? user.username : 'Guest' %></strong><br>
                <small><%= user && user.email ? user.email : '' %></small><br>
                <small><%= user && user.address ? user.address : '' %></small><br>
                <small>Contact <%= user && user.contact_number ? user.contact_number : '' %></small>
              </div>
            </div>
          </div>

          <div class="col-md-5">
            <div class="card p-3 card-preserve">
              <div class="d-flex justify-content-between">
                <div>
                  <small class="text-muted">Order date</small><br>
                  <strong><%= typeof orderDateDisplay !== 'undefined' ? orderDateDisplay : orderDateString %></strong>
                </div>
                <div class="text-end">
                  <small class="text-muted">Payment method</small><br>
                  <strong id="pm-display"><%= paymentMethodDisplay %></strong>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Products table -->
        <div class="card mb-4">
          <div class="card-body p-0">
            <table class="table mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width:40px">#</th>
                  <th>Product</th>
                  <th class="text-end">Unit</th>
                  <th class="text-center">Quantity</th>
                  <th class="text-end">Line total</th>
                </tr>
              </thead>
              <tbody>
                <% if (!cart || cart.length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center py-4 text-muted">Your cart is empty.</td>
                  </tr>
                <% } else { %>
                  <% cart.forEach((item, idx) => { %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td class="d-flex align-items-center gap-3">
                        <% if (item.image) { %>
                          <img src="/images/<%= item.image %>" alt="" style="height:40px;width:auto;">
                        <% } %>
                        <div><strong><%= item.productName %></strong></div>
                      </td>
                      <td class="text-end">$<%= Number(item.price || 0).toFixed(2) %></td>
                      <td class="text-center"><%= Number(item.quantity || 0) %></td>
                      <td class="text-end">$<%= (Number(item.price || 0) * Number(item.quantity || 0)).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Payment options -->
        <div class="card p-3">
          <h6 class="mb-2">Payment</h6>

          <div class="express-wrap">
            <div class="express-title">Express checkout</div>
            <div class="express-row">
              <button type="button" class="express-btn paypal active" data-method="paypal">PayPal</button>
              <button type="button" class="express-btn stripe" data-method="stripe">Stripe</button>
            </div>
            <div class="express-note">Select a method to continue.</div>
          </div>

          <!-- Hidden radios (still used for logic) -->
          <input class="pm-hidden" type="radio" name="pmethod" id="pm-paypal" value="paypal" checked>
          <input class="pm-hidden" type="radio" name="pmethod" id="pm-nets" value="nets">
          <input class="pm-hidden" type="radio" name="pmethod" id="pm-stripe" value="stripe">

          <!-- PayPal -->
          <div id="paypal-area" class="mt-3" style="display:none;">
            <div id="paypal-button-container"></div>
            <div id="paypal-error" class="text-danger small mt-2"></div>
          </div>

          <!-- NETS (hidden for now) -->
          <div id="nets-area" class="mt-3" style="display:none;"></div>

          <!-- Stripe -->
          <div id="stripe-area" class="mt-3" style="display:none;">
            <button id="stripe-btn" type="button" class="btn btn-primary w-100">
              Pay with Stripe
            </button>
            <div id="stripe-loading" class="text-muted small mt-2" style="display:none;">
              Redirecting to Stripe Checkout...
            </div>
          </div>
        </div>

      </div>

      <!-- RIGHT: Order summary -->
      <div class="col-lg-4">
        <div class="card order-summary p-3">
          <h5 class="mb-3">Order summary</h5>

          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>Subtotal</td>
                <td class="text-end">$<%= Number(subtotal || 0).toFixed(2) %></td>
              </tr>
              <tr>
                <td>Tax</td>
                <td class="text-end">$<%= Number(tax || 0).toFixed(2) %></td>
              </tr>
              <tr>
                <td>Shipping</td>
                <td class="text-end">$<%= Number(shipping || 0).toFixed(2) %></td>
              </tr>
              <tr class="border-top">
                <th>Total</th>
                <th class="text-end">$<%= Number(total || 0).toFixed(2) %></th>
              </tr>
            </tbody>
          </table>

          <a href="/cart" class="btn btn-outline-secondary pay-btn">Edit Cart</a>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- PayPal SDK -->
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=<%= currency %>"></script>

  <script>
    const paypalArea = document.getElementById('paypal-area');
    const netsArea = document.getElementById('nets-area');
    const stripeArea = document.getElementById('stripe-area');
    const pmDisplay = document.getElementById('pm-display');
    const errBox = document.getElementById('paypal-error');
    const netsForm = document.getElementById('nets-form');
    const netsBtn = document.getElementById('nets-btn');
    const stripeBtn = document.getElementById('stripe-btn');
    const stripeLoading = document.getElementById('stripe-loading');
    const expressButtons = document.querySelectorAll('.express-btn');
    const STORAGE_KEY = 'selectedPaymentMethod';
    let paypalButtonsRendered = false;

    function setMethod(v, { persist = true } = {}) {
      const method = v || 'paypal';
      const paypalRadio = document.getElementById('pm-paypal');
      const netsRadio = document.getElementById('pm-nets');
      const stripeRadio = document.getElementById('pm-stripe');

      if (paypalRadio) paypalRadio.checked = method === 'paypal';
      if (netsRadio) netsRadio.checked = method === 'nets';
      if (stripeRadio) stripeRadio.checked = method === 'stripe';

      paypalArea.style.display = (method === 'paypal') ? 'block' : 'none';
      netsArea.style.display = (method === 'nets') ? 'block' : 'none';
      if (stripeArea) stripeArea.style.display = (method === 'stripe') ? 'block' : 'none';

      if (pmDisplay) {
        pmDisplay.textContent = (method === 'paypal') ? 'PayPal' : (method === 'nets' ? 'NETS QR' : 'Stripe');
      }

      if (errBox) errBox.textContent = '';

      expressButtons.forEach(btn => {
        btn.classList.toggle('active', btn.dataset.method === method);
      });

      if (method === 'paypal') {
        if (!paypalButtonsRendered) {
          paypal.Buttons({
            disableFunding: ['card', 'credit'],
            createOrder: async function() {
              try {
                if (errBox) errBox.textContent = '';

                const res = await fetch('/paypal/create-order', { method: 'POST' });
                const data = await res.json();

                if (!res.ok) throw new Error(data.error || 'Create order failed');
                return data.id; // PayPal order id
              } catch (e) {
                if (errBox) errBox.textContent = e.message;
                throw e;
              }
            },

            onApprove: async function(data) {
              try {
                if (errBox) errBox.textContent = '';

                const res = await fetch('/paypal/capture-order', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ orderID: data.orderID })
                });

                const result = await res.json();

                if (!res.ok) throw new Error(result.error || 'Payment capture failed');

                // go to order details page
                window.location.href = '/orders/' + result.localOrderId;
              } catch (e) {
                if (errBox) errBox.textContent = e.message;
              }
            },

            onError: function(err) {
              console.error(err);
              if (errBox) errBox.textContent = 'PayPal error. Please try again.';
            }
          }).render('#paypal-button-container');
          paypalButtonsRendered = true;
        }
      }

      if (persist) {
        try {
          localStorage.setItem(STORAGE_KEY, method);
        } catch (e) {}
      }
    }

    expressButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const method = btn.dataset.method;
        setMethod(method);
        if (method === 'paypal') {
          // Trigger the PayPal smart button as the action for the PayPal tab.
          setTimeout(() => {
            const ppBtn = document.querySelector('#paypal-button-container button');
            if (ppBtn) ppBtn.click();
          }, 0);
        }
      });
    });

    if (stripeBtn) {
      stripeBtn.addEventListener('click', async () => {
        try {
          if (stripeLoading) stripeLoading.style.display = 'block';
          stripeBtn.disabled = true;

          const res = await fetch('/stripe/create-checkout-session', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({})
          });
          const data = await res.json();

          if (!res.ok || !data.url) {
            throw new Error(data.error || 'Unable to start Stripe checkout.');
          }

          window.location.href = data.url;
        } catch (e) {
          if (stripeLoading) stripeLoading.style.display = 'none';
          stripeBtn.disabled = false;
          if (errBox) errBox.textContent = e.message;
        }
      });
    }

    // Guard: if cart empty, disable PayPal button rendering (optional, but nicer)
    const cartHasItems = document.body.dataset.cartHasItems === '1';
    if (!cartHasItems) {
      if (errBox) errBox.textContent = 'Cart is empty. Add items before paying.';
      if (netsBtn) netsBtn.disabled = true;
      if (stripeBtn) stripeBtn.disabled = true;
    } else {
      let initialMethod = 'paypal';
      try {
        const saved = localStorage.getItem(STORAGE_KEY);
        if (saved === 'paypal' || saved === 'stripe') {
          initialMethod = saved;
        }
      } catch (e) {}
      setMethod(initialMethod, { persist: false });
    }
  </script>

</body>
</html>
