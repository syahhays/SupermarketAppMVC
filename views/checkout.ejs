<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Confirm Purchase</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-preserve { min-height: 140px; }
    .order-summary .table td, .order-summary .table th { vertical-align: middle; }
    .pay-btn { width: 100%; }
    .billing-card small { color: #666; }
  </style>
</head>
<body data-cart-has-items="<%= cart && cart.length ? '1' : '0' %>">
  <%- include('partials/navbar') %>

  <div class="container my-5">
    <div class="row g-4">

      <!-- LEFT: Billing / Items / Payment -->
      <div class="col-lg-8">

        <h2 class="mb-3">Confirm Purchase</h2>
        <p class="text-muted">Please review your order before confirming.</p>

        <div class="row g-3 mb-4">
          <div class="col-md-7">
            <div class="card billing-card p-3 card-preserve">
              <h6 class="mb-2">Bill to</h6>
              <div>
                <strong><%= user && user.username ? user.username : 'Guest' %></strong><br>
                <small><%= user && user.email ? user.email : '' %></small><br>
                <small><%= user && user.address ? user.address : '' %></small><br>
                <small>Contact <%= user && user.contact_number ? user.contact_number : '' %></small>
              </div>
            </div>
          </div>

          <div class="col-md-5">
            <div class="card p-3 card-preserve">
              <div class="d-flex justify-content-between">
                <div>
                  <small class="text-muted">Order date</small><br>
                  <strong><%= orderDateString %></strong>
                </div>
                <div class="text-end">
                  <small class="text-muted">Payment method</small><br>
                  <strong id="pm-display"><%= paymentMethodDisplay %></strong>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Products table -->
        <div class="card mb-4">
          <div class="card-body p-0">
            <table class="table mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width:40px">#</th>
                  <th>Product</th>
                  <th class="text-end">Unit</th>
                  <th class="text-center">Quantity</th>
                  <th class="text-end">Line total</th>
                </tr>
              </thead>
              <tbody>
                <% if (!cart || cart.length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center py-4 text-muted">Your cart is empty.</td>
                  </tr>
                <% } else { %>
                  <% cart.forEach((item, idx) => { %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td class="d-flex align-items-center gap-3">
                        <% if (item.image) { %>
                          <img src="/images/<%= item.image %>" alt="" style="height:40px;width:auto;">
                        <% } %>
                        <div><strong><%= item.productName %></strong></div>
                      </td>
                      <td class="text-end">$<%= Number(item.price || 0).toFixed(2) %></td>
                      <td class="text-center"><%= Number(item.quantity || 0) %></td>
                      <td class="text-end">$<%= (Number(item.price || 0) * Number(item.quantity || 0)).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Payment options -->
        <div class="card p-3">
          <h6>Payment</h6>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="pmethod" id="pm-paypal" value="paypal" checked>
            <label class="form-check-label" for="pm-paypal">PayPal</label>
          </div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="pmethod" id="pm-nets" value="nets">
            <label class="form-check-label" for="pm-nets">NETS QR</label>
          </div>

          <!-- PayPal -->
          <div id="paypal-area">
            <div id="paypal-button-container"></div>
            <div id="paypal-error" class="text-danger small mt-2"></div>
          </div>

          <!-- NETS -->
          <div id="nets-area" style="display:none;">
            <form id="nets-form" method="POST" action="/nets-qr/request" class="d-grid gap-2">
              <input type="hidden" name="cartTotal" value="<%= Number(total || 0).toFixed(2) %>">
              <button id="nets-btn" type="submit" class="btn btn-primary">
                Generate NETS QR
              </button>
              <small class="text-muted">You will be redirected to a QR code page.</small>
            </form>
          </div>
        </div>

      </div>

      <!-- RIGHT: Order summary -->
      <div class="col-lg-4">
        <div class="card order-summary p-3">
          <h5 class="mb-3">Order summary</h5>

          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>Subtotal</td>
                <td class="text-end">$<%= Number(subtotal || 0).toFixed(2) %></td>
              </tr>
              <tr>
                <td>Tax</td>
                <td class="text-end">$<%= Number(tax || 0).toFixed(2) %></td>
              </tr>
              <tr>
                <td>Shipping</td>
                <td class="text-end">$<%= Number(shipping || 0).toFixed(2) %></td>
              </tr>
              <tr class="border-top">
                <th>Total</th>
                <th class="text-end">$<%= Number(total || 0).toFixed(2) %></th>
              </tr>
            </tbody>
          </table>

          <a href="/cart" class="btn btn-outline-secondary pay-btn">Edit Cart</a>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- PayPal SDK -->
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=<%= currency %>"></script>

  <script>
    const paypalArea = document.getElementById('paypal-area');
    const netsArea = document.getElementById('nets-area');
    const pmDisplay = document.getElementById('pm-display');
    const errBox = document.getElementById('paypal-error');
    const netsBtn = document.getElementById('nets-btn');
    const netsForm = document.getElementById('nets-form');
    let netsAutoSubmitting = false;

    // Toggle payment UI
    document.querySelectorAll('input[name="pmethod"]').forEach(r => {
      r.addEventListener('change', () => {
        const v = r.value;

        paypalArea.style.display = (v === 'paypal') ? 'block' : 'none';
        netsArea.style.display = (v === 'nets') ? 'block' : 'none';

        if (pmDisplay) {
          pmDisplay.textContent = (v === 'paypal') ? 'PayPal' : 'NETS QR';
        }

        if (errBox) errBox.textContent = '';

        if (v === 'nets' && netsForm && !netsAutoSubmitting) {
          netsAutoSubmitting = true;
          netsForm.submit();
        }
      });
    });

    // Guard: if cart empty, disable PayPal button rendering (optional, but nicer)
    const cartHasItems = document.body.dataset.cartHasItems === '1';
    if (!cartHasItems) {
      if (errBox) errBox.textContent = 'Cart is empty. Add items before paying.';
      if (netsBtn) netsBtn.disabled = true;
    } else {
      paypal.Buttons({
        createOrder: async function() {
          try {
            if (errBox) errBox.textContent = '';

            const res = await fetch('/paypal/create-order', { method: 'POST' });
            const data = await res.json();

            if (!res.ok) throw new Error(data.error || 'Create order failed');
            return data.id; // PayPal order id
          } catch (e) {
            if (errBox) errBox.textContent = e.message;
            throw e;
          }
        },

        onApprove: async function(data) {
          try {
            if (errBox) errBox.textContent = '';

            const res = await fetch('/paypal/capture-order', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ orderID: data.orderID })
            });

            const result = await res.json();

            if (!res.ok) throw new Error(result.error || 'Payment capture failed');

            // go to order details page
            window.location.href = '/orders/' + result.localOrderId;
          } catch (e) {
            if (errBox) errBox.textContent = e.message;
          }
        },

        onError: function(err) {
          console.error(err);
          if (errBox) errBox.textContent = 'PayPal error. Please try again.';
        }
      }).render('#paypal-button-container');
    }
  </script>

</body>
</html>
