<!DOCTYPE html>
<html>
<head>
  <title>Order <%= orderId %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-5">
  <h1>Order <%= orderId %></h1>

  <table class="table table-striped mt-4">
    <thead class="table-dark">
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% items.forEach(i => { %>
        <tr>
          <td><%= i.productName %></td>
          <td><%= i.quantity %></td>
          <td>$<%= Number(i.price || 0).toFixed(2) %></td>
          <td>$<%= (Number(i.price || 0) * Number(i.quantity || 0)).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h3 class="text-end mt-3">Grand Total: $<%= Number(total || 0).toFixed(2) %></h3>

  <a href="/admin/orders" class="btn btn-secondary mt-3">Back</a>
</div>

</body>
</html>