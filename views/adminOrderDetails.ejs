<!DOCTYPE html>
<html>
<head>
  <title>Order <%= orderId %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-5">
  <h1>Order <%= orderId %></h1>

  <% if (order) { %>
    <div class="mb-3">
      <div><strong>Status:</strong> <%= order.status %></div>
      <div><strong>Payment method:</strong> <%= order.payment_method || (payment && payment.provider) || 'N/A' %></div>
      <% if (payment && payment.refunded_at) { %>
        <div><strong>Refunded at:</strong> <%= payment.refunded_at %></div>
      <% } %>
      <% if (payment && payment.refund_ref) { %>
        <div><strong>Refund ref:</strong> <%= payment.refund_ref %></div>
      <% } %>
    </div>
  <% } %>

  <table class="table table-striped mt-4">
    <thead class="table-dark">
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% items.forEach(i => { %>
        <tr>
          <td><%= i.productName %></td>
          <td><%= i.quantity %></td>
          <td>$<%= Number(i.price || 0).toFixed(2) %></td>
          <td>$<%= (Number(i.price || 0) * Number(i.quantity || 0)).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="text-end mt-3">
    <div>Subtotal: $<%= Number(subtotal || 0).toFixed(2) %></div>
    <div>Tax: $<%= Number(tax || 0).toFixed(2) %></div>
    <div>Shipping: $<%= Number(shipping || 0).toFixed(2) %></div>
    <h3 class="mt-2">Grand Total: $<%= Number(total || 0).toFixed(2) %></h3>
  </div>

  <% if (payment && payment.status === 'REFUNDED') { %>
    <div class="alert alert-info mt-4">Order has been refunded.</div>
  <% } %>

  <a href="/admin/orders" class="btn btn-secondary mt-3">Back</a>
</div>

</body>
</html>
