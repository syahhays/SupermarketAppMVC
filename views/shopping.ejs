<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Groceria Shop</title>
</head>

<body>

  <%- include("partials/navbar") %>

  <div class="container mt-4">

    <!-- HEADER + SEARCH -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
      <h2 class="m-0">Groceria Shop</h2>

      <form class="d-flex" method="GET" action="/shopping" style="width: 270px;">
        <input class="form-control me-2" type="search" name="q" placeholder="Search products..." value="<%= query %>">
        <button class="btn btn-outline-primary">Search</button>
      </form>
    </div>

    <hr class="mb-4">

    <!-- PRODUCT GRID -->
    <div class="row g-3 product-grid">

      <% products.forEach(product => {
          const unavailable = (!product.isActive || product.quantity <= 0);
      %>

        <div class="col-6 col-md-4 col-lg-3">
          <div class="product-card">

            <!-- IMAGE WRAPPER (IMPORTANT!!) -->
            <div class="product-img-box">
              <% if (product.image) { %>
                <img src="/images/<%= product.image %>" class="product-img" alt="<%= product.productName %>">
              <% } else { %>
                <img src="/images/placeholder.png" class="product-img">
              <% } %>
            </div>

            <!-- NAME -->
            <div class="product-name"><%= product.productName %></div>

            <!-- PRICE -->
            <div class="product-price">$<%= product.price.toFixed(2) %></div>

            <!-- STOCK BADGE -->
            <% if (unavailable) { %>
              <span class="badge bg-secondary stock-badge">Unavailable</span>
            <% } else { %>
              <span class="badge bg-success stock-badge"><%= product.quantity %> in stock</span>
            <% } %>

            <!-- BUTTON -->
            <% if (unavailable) { %>
              <button class="btn btn-secondary btn-sm add-cart-btn" disabled>Unavailable</button>
            <% } else { %>
              <form method="POST" action="/add-to-cart/<%= product.id %>">
                <input type="hidden" name="quantity" value="1">
                <button class="btn btn-primary btn-sm add-cart-btn">Add to Cart</button>
              </form>
            <% } %>

          </div>
        </div>

      <% }) %>

    </div>
  </div>

</body>
</html>